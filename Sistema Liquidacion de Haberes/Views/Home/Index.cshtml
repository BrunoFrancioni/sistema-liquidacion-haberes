@model IEnumerable<Sistema_Liquidacion_de_Haberes.Models.DbFunctions.ViewModelEmployee>


<h2>Lista de Empleados</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LugarTrabajo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Legajo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaIngreso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ObraSocial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreSector)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreCategoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th>
                @Html.DisplayName("OPCIONES")
            </th>
        </tr>
    </thead>

    <tbody>
        @if (Model.Count() != 0)
        {
            foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LugarTrabajo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Legajo)
            </td>
            <td>
                @Html.DisplayName(item.FechaIngreso.ToString("dd/MM/yyyy"))
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ObraSocial)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.NombreSector)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.NombreCategoria)
            </td>

            @if (item.Activo == true)
            {
                <td>
                    @Html.DisplayName("SI")
                </td>
            }
            else
            {
                <td>
                    @Html.DisplayName("NO")
                </td>
            }
            <td>
                @Html.ActionLink("Edit", "Edit", new { idEmpleado = item.IdEmpleado }) |
                @Html.ActionLink("Details", "Details", new { idEmpleado = item.IdEmpleado }) |
                @Html.ActionLink("Dar de baja", "Delete", new { idEmpleado = item.IdEmpleado })
            </td>
        </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="10">
                    No se han encontrado resultados.
                </td>
            </tr>
        }
    </tbody>

</table>
